# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.js]
indent_size = 2
max_line_length = 120

[*.{yml,json,eslintrc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
